    title: 'Speaking',
    description: 'International talks and workshops on AI/ML',
  },
  {
    icon: 'üíº',
    title: 'Leadership',
    description: 'CEO of MLNomads LLC, driving AI innovation',
  },
  {
    icon: 'üèÜ',
    title: 'Recognition',
    description: 'Google Developer Expert in AI/ML',
  },
